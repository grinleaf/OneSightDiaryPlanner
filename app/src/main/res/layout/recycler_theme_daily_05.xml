<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image_daily_theme"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/daily05"
        android:padding="16dp"
        android:scaleType="fitStart"
        android:src="@drawable/tutorial_sample01"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_day_daily_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#날짜"
        android:layout_alignRight="@id/iv_image_daily_theme"
        android:layout_alignLeft="@id/iv_image_daily_theme"
        android:layout_above="@id/tv_content_daily_theme"
        android:gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/tv_content_daily_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_image_daily_theme"
        android:layout_alignRight="@id/iv_image_daily_theme"
        android:layout_alignBottom="@id/iv_image_daily_theme"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="#일정내용" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_category_daily_theme"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/iv_image_daily_theme"
        android:layout_marginHorizontal="2dp"
        android:layout_toLeftOf="@id/iv_image_daily_theme"
        android:src="@mipmap/ic_test_icon01" />

</RelativeLayout>