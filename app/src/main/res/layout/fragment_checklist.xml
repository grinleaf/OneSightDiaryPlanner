<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_checklist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/checklist_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_checklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todo"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_day_checklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_checklist_title"
            android:padding="12dp"
            android:text="당일 날짜"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_datepicker_checklist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignTop="@id/layout_checklist_title"
        android:layout_alignBottom="@id/layout_checklist_title"
        android:src="@drawable/ic_calendar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_checklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_checklist_add_date"
        android:layout_below="@id/layout_checklist_title"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="16dp" />

    <RelativeLayout
        android:id="@+id/layout_checklist_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 일정 추가"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>