<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_visible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_frame_lifecycle_todolist_theme"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="1">
        <CheckBox
            android:id="@+id/checkbox_lifecycle_todolist_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정내용"
            android:textColor="@color/default_gray"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_start_day_lifecycle_todolist_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작일"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="~"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_end_day_lifecycle_todolist_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료일"
            android:textSize="10sp"
            android:layout_marginRight="8dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_category_lifecycle_theme"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tutorial_sample01"
            android:layout_marginVertical="4dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_delete_icon_lifecycle_todolist_theme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/tv_day_checklist_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>
    </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            app:dividerColor="#6E6E6E"/>
    </LinearLayout>
</RelativeLayout>
