<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_05_daily_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/daily05"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/iv_image_daily_theme"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/daily05"
            android:scaleType="centerCrop"
            android:src="@null"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_day_daily_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image_daily_theme"
            android:layout_alignLeft="@id/iv_image_daily_theme"
            android:layout_alignRight="@id/iv_image_daily_theme"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="#날짜" />

        <TextView
            android:id="@+id/tv_title_daily_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_daily_theme"
            android:layout_alignLeft="@id/iv_image_daily_theme"
            android:layout_alignRight="@id/iv_image_daily_theme"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="#일정제목" />
        <TextView
            android:id="@+id/tv_content_daily_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_daily_theme"
            android:layout_alignLeft="@id/iv_image_daily_theme"
            android:layout_alignRight="@id/iv_image_daily_theme"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="#일정내용" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_category_daily_theme"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/layout_05_daily_theme"
        android:layout_marginHorizontal="2dp"
        android:layout_toRightOf="@id/layout_05_daily_theme"
        android:src="@mipmap/ic_test_icon01"
        app:civ_border_color="#FFaaaaaa"
        app:civ_border_width="1dp"/>

</RelativeLayout>