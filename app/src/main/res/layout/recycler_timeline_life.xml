<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_timeline_lifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/timeline_lifecycle_box"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/tv_start_day_timeline_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="시작 일자"
                android:textColor="#FF888888" />
            <TextView
                android:id="@+id/tv_between_day_timeline_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_start_day_timeline_lifecycle"
                android:text=" ~ "
                android:textColor="#FF888888" />

            <TextView
                android:id="@+id/tv_end_day_timeline_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_between_day_timeline_lifecycle"
                android:text="종료일자"
                android:textColor="#FF888888" />

            <TextView
                android:id="@+id/tv_title_timeline_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_start_day_timeline_lifecycle"
                android:layout_alignLeft="@id/tv_start_day_timeline_lifecycle"
                android:layout_marginBottom="8dp"
                android:text="일정 내용"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_cycle_timeline_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_category_timeline_lifecycle"
                android:layout_alignBottom="@id/iv_category_timeline_lifecycle"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/iv_category_timeline_lifecycle"
                android:gravity="center"
                android:text="반복 주기"
                android:textColor="#9EFF3B3B"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_category_timeline_lifecycle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/tutorial_sample04"
                app:civ_circle_background_color="@color/white"
                app:civ_border_color="@color/lifecycle_component_color_02"
                app:civ_border_width="1dp"/>

        </RelativeLayout>

</RelativeLayout>