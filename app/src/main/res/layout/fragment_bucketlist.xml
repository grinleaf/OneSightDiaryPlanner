<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_bucketlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_bucketlist_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_bucketlist_title"
            android:layout_alignRight="@id/tv_bucketlist_title"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="2022 년"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bucketlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bucketlist_year"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="30dp"
            android:text="usernickname 님의 버킷리스트"
            android:textSize="20sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_datepicker_dailynote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/tv_bucketlist_title"
            android:layout_alignBottom="@id/tv_bucketlist_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/tv_bucketlist_title"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bucketlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_bucketlist"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</RelativeLayout>